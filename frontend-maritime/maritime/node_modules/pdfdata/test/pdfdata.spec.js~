var apikey = process.env.PDFDATA_APIKEY;
var endpoint = process.env.PDFDATA_ENDPOINT || "https://api.pdfdata.io/v1"

console.log(describe);
var assert = require("assert");

assert(apikey);

var pdfdata = require("pdfdata")(apikey);
pdfdata.setEndpoint(endpoint);

pdfdata.info().then(function (result) {
    assert(result.message == "Welcome to PDFDATA.io!");
    assert(result.api_version && result.api_version.match(/^\d{4}-\d\d-\d\d$/));
    assert(result.build && result.build.match(/^[\da-f]{40}$/));
}).catch(function (error) {
    throw error;
});

describe('Array', function() {
  describe('#indexOf()', function() {
    it('should return -1 when the value is not present', function() {
      assert.equal(-1, [1,2,3].indexOf(4));
    });
  });
});

